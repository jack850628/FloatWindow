<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:layout_weight="0"
        android:orientation="horizontal">

        <com.example.jack8.floatwindow.FwEditView
            android:id="@+id/editText"
            style="@style/AppTheme.WindiowText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:gravity="right"
            android:inputType="textPersonName"
            android:text="0"
            android:textSize="24sp" />

        <ImageButton
            android:id="@+id/del"
            style="@style/AppTheme.Button"
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:src="@drawable/arrow"
            android:tag="del"
            android:theme="@style/AppTheme.Button" />

    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

    </android.support.v4.view.ViewPager>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/pageindicatorLight1"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_weight="1"
                android:layout_margin="3dp"
                android:src="@drawable/page_indicator_focused" />

            <ImageView
                android:id="@+id/pageindicatorLight2"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_weight="1"
                android:layout_margin="3dp"
                android:src="@drawable/page_indicator_unfocused" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>