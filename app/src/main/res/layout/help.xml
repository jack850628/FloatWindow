<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            style="@style/AppTheme.WindiowText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/help_string1" />

        <ImageView
            android:id="@+id/demonstration_image1"
            android:layout_width="match_parent"
            android:layout_height="315dp"
            android:src="@drawable/demonstration" />

        <TextView
            style="@style/AppTheme.WindiowText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/help_string2" />

        <ImageView
            android:id="@+id/demonstration_image2"
            android:layout_width="match_parent"
            android:layout_height="142dp"
            android:src="@drawable/notify_image" />

        <TextView
            style="@style/AppTheme.WindiowText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/help_string5" />

        <!--<Space
            android:layout_width="match_parent"
            android:layout_height="56dp" />-->

        <ImageView
            android:id="@+id/demonstration_image3"
            android:layout_width="270dp"
            android:layout_height="249dp"
            android:src="@drawable/add_shortcut_image1" />

        <TextView
            style="@style/AppTheme.WindiowText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/help_string4" />
    </LinearLayout>
</ScrollView>