<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            style="@style/AppTheme.WindiowText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/help_string3" />

        <ImageView
            android:layout_width="270dp"
            android:layout_height="249dp"
            android:src="@drawable/main_menu_image" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="56dp" />

        <TextView
            style="@style/AppTheme.WindiowText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/help_string4" />

        <ImageView
            android:id="@+id/new_functions_image2"
            android:layout_width="270dp"
            android:layout_height="249dp"
            android:src="@drawable/add_shortcut_image1" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="56dp" />

        <TextView
            style="@style/AppTheme.WindiowText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/calculator" />

        <ImageView
            android:layout_width="270dp"
            android:layout_height="249dp"
            android:src="@drawable/calculator_image" />
    </LinearLayout>
</ScrollView>