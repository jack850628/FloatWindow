<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Button" parent="Widget.AppCompat.Button">
        <item name="colorButtonNormal">#C5C5C5</item>
        <item name="android:textColor">#000000</item>
        <item name="android:colorButtonNormal" tools:targetApi="lollipop">#C5C5C5</item>
    </style>

    <style name="AppTheme.WindiowText" parent="@android:style/TextAppearance">
        <item name="android:shadowColor">#cefffefe</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">0</item>
        <item name="android:shadowRadius">15</item>
        <item name="android:textColor">#313131</item>
    </style>
</resources>
